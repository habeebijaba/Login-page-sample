<div class="container">
    <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-3"></div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-5" id="signupcolomn">
            <form action="/signup" method="post" role="form" enctype="application/x-www-form-urlencoded" class="p-5">
                <legend class="text-center mt-3" style="font-weight: 700; font-size:3rem ;" >Signup</legend>
                <div class="form-group pt-3">
                    <label for="first_name">First Name</label>
                    <input type="text" class="form-control" name="first_name" id="first_name" placeholder="First Name"
                        required="true">
                </div>
                <div class="form-group pt-3">
                    <label for="last_name">Last Name</label>
                    <input type="text" class="form-control" name="last_name" id="first_name" placeholder="Last Name"
                        required="true">
                </div>
                <div class="form-group pt-3">
                    <label for="email">Email Address</label>
                    <input type="text" class="form-control" name="email" id="email" placeholder="Email Address"
                        required="true">
                </div>
                <div class="form-group pt-3">
                    <label for="pw">Password</label>
                    <input type="password" class="form-control" name="password" id="pw" placeholder="password"
                        required="true">
                </div>
                <a href="/"><button type="submit" class="btn btn-primary mt-3 mb-3 formbutton">SIGNUP</button></a>
            </form>
        </div>
    </div>
</div>